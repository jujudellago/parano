<h2><%='All pages'.t %></h2>

<div id ="editor_infos">
	<h3><%= "Infos".t %></h3>
	<p><%=image_tag(CMS_ICONS['edit'], :alt=>'edit'.t)%> <%="Edit in WYSYWYG".t%></p>
	<!-- <p><%=image_tag(CMS_ICONS['code'], :alt=>'Edit HTML code'[:edit_html_code])%> <%="Edit HTML code"[:edit_html_code]%></p> -->
	<p><%=image_tag(CMS_ICONS['delete'], :alt=>"Destroy".t)%> <%="Destroy".t%></p>
	<p><%=image_tag(CMS_ICONS['add_child'], :alt=>'Add child page'.t)%> <%= 'Add child page'.t %></p>
	<p><%=image_tag(CMS_ICONS['updown'], :alt=>"Order pages ".t)%> <%="Order pages ".t%></p>
	<p><%=image_tag(CMS_ICONS['attach'],:alt=>"Attachments".t) %>  <%="Attachments".t %></p>
	<p><%=image_tag(CMS_ICONS['cfmd'], :alt=>"Page enabled".t) %> <%="Page enabled".t %> <span class="small_info"><%= "Click on icon to disable".t %></span></p>
