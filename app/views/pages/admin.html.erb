	<p><%=image_tag(CMS_ICONS['visible'],:alt=>"Visible to".t) %>  <%="Visible to".t %></p>
</div>

<ol id="pages_list">
  <% @pages.each do |page| %>
<%= render :partial => 'page', :locals=>{:page=>page} %>
  <% end %>
</ol>

<p><%= link_to_function 'Add parent page'.t do |page| 
	page[:form_container].toggle
	page[:parent_hidden].value="0"
	page.replace_html :info_page_form, 'Add parent page'.t
end %>
</p>

