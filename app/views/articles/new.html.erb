<% content_for :head do%>
<%= javascript_include_tag 'tiny_mce/tiny_mce.js' %>	
<% end %>
<%= use_tinymce  %>
	<h2><%= "New Article".t %></h2>
<%= start_form_container %>
<%= error_messages_for :article %>
<% form_for(:article, :url => articles_path,:html => { :onsubmit=>"return (check_article_form('article_form'))", :id=>'article_form'}) do |f| %>
  <%= render :partial => 'article_form', :locals => {:f => f} -%>

		<%= fieldset_legend("Action".t) %>
		<%= submit_tag "Create".t,:onclick=>"return (check_article_form('article_form'))", :class=>'fancy_ok' %> 
	<% end %>
		<%= button_to 'Back'.t,  articles_path(:category_id=>@category_id), :class=>'fancy_nok',:method=>:get %>
	<%= fieldset_end %>
<%= end_form_container %>

